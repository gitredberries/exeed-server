# Environment Configuration
NODE_ENV=production
MODEL=local

# Server
SERVER_PORT=3000

# Database (REQUIRED - Update with your MySQL credentials)
DATABASE_URL=mysql://username:password@host:3306/database_name

# JWT Configuration (REQUIRED - Generate a secure 32+ char secret)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d

# Redis (Optional - will use in-memory fallback if not available)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE_INDEX=0

# S3/OBS Storage Configuration
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_BUCKET=your_bucket_name
S3_REGION=your_region
S3_ENDPOINT=https://your-endpoint.com
S3_DOMAIN=https://cms-uat.omodaglobal.com

# Elasticsearch (Optional)
ES_NODE=http://localhost:9200
ES_USERNAME=
ES_PASSWORD=

# Nacos (Optional - for config management)
NACOS_SERVER_ADDR=
NACOS_NAMESPACE=
